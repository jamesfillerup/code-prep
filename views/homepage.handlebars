<main class="columns">
    <div class="column">
        <form class="left-form">
            <div class="content">
                <h2>
                    Welcome to Code Prep!
                </h2>
            </div>
            <div class="content">
                <h5>
                    Code prep is a collaborative platform for you to for you to practice your coding skills. These can
                    be
                    interview questions, algorithms, or other fun challenges.
                </h5>
            </div>
        </form>
    </div>

    {{#if loggedIn}}
    <div class="column tall">
        <h2>View Most Recent Interview Questions</h2>
        <ol class="post-list">
            {{#each posts as |post|}}
            <li>
                {{> post-info post}}
            </li>
            {{/each}}
        </ol>
    </div>

    {{else}}

    <div class="column content tall" id="rightside">
        <form class="login-form column right-form">
            <div>
                <h2>Login</h2>
                <div>
                    <label for="email-login">Email:</label>
                    <input type="text" id="email-login" />
                </div>
                <div>
                    <label for="password-login">Password:</label>
                    <input type="password" id="password-login" />
                </div>
                <div>
                    <button type="submit">Login</button>
                </div>
            </div>
        </form>

        <form class="signup-form column right-form">
            <div>
                <h2>Sign Up</h2>
                <div>
                    <label for="username-signup">UserName:</label>
                    <input type="text" id="username-signup" />
                </div>
                <div>
                    <label for="email-signup">Email:</label>
                    <input type="text" id="email-signup" />
                </div>
                <div>
                    <label for="password-signup">Password:</label>
                    <input type="password" id="password-signup" />
                </div>
                <div>
                    <button type="submit">Sign Up</button>
                </div>
            </div>

        </form>
    </div>
</main>

<script src="/javascript/login.js"></script>

{{/if}}