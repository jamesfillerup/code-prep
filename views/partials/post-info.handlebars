<article class="post">
  <div class="title">
    <a href ="/post/{{id}}" target="_blank">{{title}}</a>
    <p>{{post_text}}</p>
  </div>
  <div class="meta">
    {{likes_count}} {{format_plural "point" likes_count}} by {{user.username}} on {{format_date created_at}}
    {{!-- WE DONT NEED THE FORMAT DATE OR CREATED AT RIGHT --}}

    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>