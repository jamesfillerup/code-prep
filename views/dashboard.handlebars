<div class="columns">
    <form class="new-question-form column ">
      <div>
        <h2>Have something to share?</h2>
      </div>
        <div>
            <label for="question-title">Title</label>
            <input type="text" id="question-title" name="question-title" />
        </div>
        <div>
            <label for="question-url">Content</label>
            <input id="question-url" name="question-url" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
    
{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}


{{#if loggedIn}}
<section class="column ">
    <h2>View Most Recent Interview Questions</h2>
<ol class="post-list">
    {{#each posts as |post|}}
    <li>
    {{> post-info post}}
    </li>
    {{/each}}
</ol>
</section>
{{/if}}
</div>


<script src="/javascript/add-question.js"></script>